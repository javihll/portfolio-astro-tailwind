---
import SkillCircle from "./SkillCircle.astro";
---

<section id="skills" class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold mb-8">Mis habilidades</h2>
        <div class="flex flex-wrap justify-center gap-8">
            {[
                { skill: 'HTML5', percentage: 95 },
                { skill: 'CSS3', percentage: 90 },
                { skill: 'JavaScript', percentage: 85 },
                { skill: 'React', percentage: 80 },
                { skill: 'Vue.js', percentage: 75 },
                { skill: 'Node.js', percentage: 70 },
            ].map((item) => (
                <SkillCircle {...item} />
            ))}
        </div>
    </div>
</section>
